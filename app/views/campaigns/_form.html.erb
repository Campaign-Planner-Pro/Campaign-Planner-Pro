<%= form_for(@campaign) do |f| %>
    <ul>
    <% @campaign.errors.full_messages.each do |error| %>
      <li><%= error %></li>
    <% end %>
    </ul>
    <p>
      <%= f.label :name %><br />
      <%= f.text_field :name %>
      <%= f.hidden_field :user_id %> 
    </p>
    <p>
      <%= f.label :description %><br />
      <%= f.text_area :description %>
    </p>
    <p>
      <%= f.submit %>
    </p>
<% end %>