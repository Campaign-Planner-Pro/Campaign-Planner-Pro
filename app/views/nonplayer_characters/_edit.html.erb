<%= form_with model: @nonplayer_character, url: campaign_nonplayer_character_path(@campaign, @nonplayer_character), method: :patch do |f| %>
  <%= f.label :name  %>
  <%= f.text_field :name %>

  <%= f.label :background %>
  <%= f.text_area :background %>

  <%= f.submit data: {turbo_frame: "_top"} %>
<% end %>